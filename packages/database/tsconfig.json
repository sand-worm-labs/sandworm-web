{
    "extends": "@sandworm/typescript-config/nestjs.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "esModuleInterop": true,
        "incremental": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts"
    ]
}